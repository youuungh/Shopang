    <style name="TextAppearance.Shopang.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">?android:attr/colorBackground</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="fontFamily">@font/google_sans_regular</item>
