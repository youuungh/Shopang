<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Shopang" parent="Base.Theme.Shopang" />

    <!-- TextView -->

    <style name="Base.Shopang.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:breakStrategy">high_quality</item>
        <item name="android:hyphenationFrequency">full</item>
        <item name="android:lineBreakWordStyle" tools:targetApi="33">phrase</item>
    </style>

    <style name="Widget.Shopang.TextView" parent="Base.Shopang.TextView">
        <item name="android:hyphenationFrequency">full</item>
    </style>

    <style name="Widget.Shopang.TextView.Medium" parent="Widget.Shopang.TextView">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>

    <!-- Button -->

    <style name="Base.Shopang.Button.UnelevatedButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.Shopang.Button.UnelevatedButton" parent="Base.Shopang.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="fontFamily">@font/google_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Base.Shopang.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.Shopang.Button.OutlinedButton" parent="Base.Shopang.OutlinedButton">
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="fontFamily">@font/google_sans_bold</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- ImageButton -->

    <style name="Widget.Shopang.Button.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="iconTint">@color/image_button_color</item>
        <item name="iconSize">24dp</item>
    </style>

    <!-- TextInputLayout -->

    <style name="Widget.Shopang.TextInputLayout.OutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopStart">3dp</item>
        <item name="boxCornerRadiusTopEnd">3dp</item>
        <item name="boxCornerRadiusBottomStart">3dp</item>
        <item name="boxCornerRadiusBottomEnd">3dp</item>
    </style>

    <style name="Widget.Shopang.TextInputLayout.OutlinedBox.Code" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:gravity">center</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">false</item>
        <item name="counterMaxLength">1</item>
        <item name="boxStrokeColor">@color/selector_text_input_outlined</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <style name="Widget.Shopang.TextInputLayout.FilledBox" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopStart">3dp</item>
        <item name="boxCornerRadiusTopEnd">3dp</item>
        <item name="boxCornerRadiusBottomStart">3dp</item>
        <item name="boxCornerRadiusBottomEnd">3dp</item>
    </style>

    <!-- TextInputEditText -->

    <style name="Widget.Shopang.TextInputEditText.OutlinedBox.Code" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="maxLines">1</item>
    </style>

    <!-- SnackBar -->

    <style name="Widget.Shopang.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="shapeAppearance">?attr/shapeAppearanceCornerMedium</item>
    </style>

    <style name="Widget.Shopang.Snackbar.TextView" parent="Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">?attr/colorSurfaceVariant</item>
    </style>

    <style name="Widget.Shopang.Button.TextButton.Snackbar" parent="Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="fontFamily">@font/google_sans_regular</item>
    </style>

    <!-- Toolbar -->

    <style name="Widget.Shopang.Toolbar" parent="@style/Widget.Material3.Toolbar.OnSurface">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleTextAppearance">@style/TextAppearance.Shopang.TitleLarge</item>
        <item name="titleMarginStart">0dp</item>
        <item name="titleCentered">true</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="Widget.Shopang.Toolbar.Back" parent="@style/Widget.Shopang.Toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="navigationContentDescription">@string/action_back</item>
    </style>

    <style name="Widget.Shopang.Toolbar.Close" parent="@style/Widget.Shopang.Toolbar">
        <item name="navigationIcon">@drawable/ic_close</item>
        <item name="navigationContentDescription">@string/action_close</item>
    </style>

    <!--BottomSheetDialog-->

    <style name="Theme.Shopang.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="enableEdgeToEdge">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>
    </style>

    <!-- BottomNavigation -->

    <style name="BottomNavigation.Shopang.Active.Text" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/google_sans_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Dialog -->

    <style name="ThemeOverlay.Shopang.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Shopang.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Shopang.Button.TextButton.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.Shopang.Button.TextButton.Dialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Shopang.Title.Text</item>
    </style>

    <style name="Widget.Shopang.Button.TextButton.Dialog" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="MaterialAlertDialog.Shopang.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textAppearance">?attr/textAppearanceHeadlineSmall</item>
        <item name="android:capitalize">none</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">4</item>
    </style>

    <!-- MD3 Typography -->

    <style name="Widget.Shopang.TextView.HeadlineSmall" parent="Widget.Shopang.TextView">
        <item name="android:textAppearance">?attr/textAppearanceHeadlineSmall</item>
    </style>

    <style name="Widget.Shopang.TextView.TitleLarge" parent="Widget.Shopang.TextView">
        <item name="android:textAppearance">?attr/textAppearanceTitleLarge</item>
    </style>

    <style name="Widget.Shopang.TextView.TitleMedium" parent="Widget.Shopang.TextView.Medium">
        <item name="android:textAppearance">?attr/textAppearanceTitleMedium</item>
    </style>

    <style name="Widget.Shopang.TextView.BodyMedium" parent="Widget.Shopang.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
    </style>

    <style name="Widget.Shopang.TextView.BodySmall" parent="Widget.Shopang.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBodySmall</item>
    </style>

    <style name="Widget.Shopang.TextView.LabelLarge" parent="Widget.Shopang.TextView.Medium">
        <item name="android:textAppearance">?attr/textAppearanceLabelLarge</item>
    </style>

    <style name="Widget.Shopang.TextView.LabelMedium" parent="Widget.Shopang.TextView.Medium">
        <item name="android:textAppearance">?attr/textAppearanceLabelMedium</item>
    </style>

    <style name="Widget.Shopang.TextView.LabelSmall" parent="Widget.Shopang.TextView.Medium">
        <item name="android:textAppearance">?attr/textAppearanceLabelSmall</item>
    </style>

    <!-- TextAppearance -->

    <style name="TextAppearance.Shopang.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="TextAppearance.Shopang.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="TextAppearance.Shopang.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="TextAppearance.Shopang.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="TextAppearance.Shopang.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="TextAppearance.Shopang.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="TextAppearance.Shopang.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="TextAppearance.Shopang.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">?android:attr/colorBackground</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="fontFamily">@font/google_sans_regular</item>
    </style>

</resources>